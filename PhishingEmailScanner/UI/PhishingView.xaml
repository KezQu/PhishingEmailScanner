<UserControl x:Class="PhishingEmailScanner.UI.PhishingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhishingEmailScanner.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6E6E6"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#E6E6E6"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="#1E1E1E">
        <StackPanel Margin="10">

            <TextBlock Text="{Binding StatusText}"
                       FontWeight="Bold"
                       FontSize="16" 
                       Margin="0,0,0,8">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#6FCF97"/>
                        <!-- default -->

                        <Style.Triggers>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kNone">
                                <Setter Property="Foreground" Value="#6FCF97"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kLow">
                                <Setter Property="Foreground" Value="#F2C94C"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kModerate">
                                <Setter Property="Foreground" Value="#F2994A"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kMedium">
                                <Setter Property="Foreground" Value="#EB5757"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kHigh">
                                <Setter Property="Foreground" Value="#C0392B"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kCritical">
                                <Setter Property="Foreground" Value="#8E0000"/>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding Risk}"
                             Value="kOverriden">
                                <Setter Property="Foreground" Value="#2D9CDB"/>
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <TextBlock Text="Naruszone reguły:"
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

            <ListView ItemsSource="{Binding Violations}" Margin="0,0,0,8">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock Text="Nadpisane reguły:"
                       FontSize="16" 
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>  

            <ListView ItemsSource="{Binding Overrides}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>  
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Separator Margin="8"/>

            <Button Content="Dodaj domenę do whitelisty"
                    Command="{Binding AddDomainCommand}"
                    ToolTip="{Binding CurrentDomain}"/>

            <Button Content="Dodaj adres do whitelisty"
                    Margin="0,4,0,0"
                    Command="{Binding AddSenderCommand}"
                    ToolTip="{Binding CurrentSender}"/>

        </StackPanel>
    </Grid>
</UserControl>
